<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecureBLE.Views.ServicesView"
             Title="Services List">
  <ContentPage.Content>
    <ListView ItemsSource="{ Binding Services }"
              SelectedItem="{ Binding SelectedService }">
      <ListView.Header>
        <Label Text="Available Services"  Style="{StaticResource ListViewHeaderLabelStyle}"/>
      </ListView.Header>
      <ListView.ItemTemplate>
        <DataTemplate>
          <TextCell Text="{Binding Name}" TextColor="Gray"/>
        </DataTemplate>
      </ListView.ItemTemplate>
    </ListView>
  </ContentPage.Content>
</ContentPage>